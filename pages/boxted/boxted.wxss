.section{
  display: flex;
  justify-content: center;
}
.myVideo{
  width: 98%;
}
.comment{
  height: 60rpx;
  line-height: 60rpx;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: space-around;
  border-bottom:5rpx solid rgb(243, 241, 241); 
}
.active{
  color: rgb(245, 126, 146);
  border-bottom: 5rpx solid rgb(245, 126, 146);
}
.playTitle{
  font-size: 32rpx;
  color: rgb(100, 98, 98);
}
.playTime{
  font-size: 32rpx;
  color: rgb(100, 98, 98);
}
.commentsList{
  padding: 15rpx 10rpx 40rpx 10rpx ;
  border-bottom: 2rpx solid rgb(219, 217, 217)
}
.profiletwo{
  display: flex;
  align-items: center;
}
.profileimg{
  width: 100rpx;
  height: 100rpx;

}
.profileimg image{
  width: 100%;
  height: 100%;
}
.time{
  font-size: 26rpx;
  color: rgb(128, 123, 123)
}
.comments{
  font-size: 34rpx;
  color:  rgb(104, 101, 101)
}
.videomoder{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.videoplayTitle{
  padding: 5rpx 20rpx;
}
.videomoderimg{
  flex: 1;
  width: 240rpx;
  height: 200rpx;
  padding: 10rpx;
}
.videomoderimg image{
  width: 240rpx;
  height: 100%
}
.videomoderadd{
  flex: 4;
  height: 215rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.videomodertitle{
  display: flex;
   display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.videomodetimes{
  font-size: 30rpx;
  color: #666;
}
.videomoderplay{
  font-size: 26rpx;
  color: #666;
}